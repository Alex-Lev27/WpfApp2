<Window x:Class="WpfApp2.WorkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Склад" Height="1080" Width="1920" WindowState="Maximized">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="IsEnabled" Value="False"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="IsEnabled" Value="False"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Margin" Value="5,0,10,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#555555"/>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid>
        <TabControl Margin="5,5,5,5">
            <TabItem Width="0"/>
            <TabItem Header="Остатки" >
                <DataGrid AutoGenerateColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Артикул"/>
                        <DataGridTextColumn Header="Наименование"/>
                        <DataGridTextColumn Header="Категория"/>
                        <DataGridTextColumn Header="Цена"/>
                        <DataGridTextColumn Header="Остаток"/>
                        <DataGridTextColumn Header="Приозводитель"/>
                        <DataGridTextColumn Header="Страна производитель"/>
                        <DataGridTextColumn Header="Вес"/>
                        <DataGridTextColumn Header="Объем"/>
                        <DataGridTextColumn Header="Комментарий"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Заказы клиентов">
                <StackPanel>
                    <ToolBarTray Margin="2,2,2,2">
                        <ToolBar>
                            <Button Content="Добавить"/>
                            <Button Content="Удалить"/>
                            <Button Content="Провести"/>
                            <Button Content="Изменить"/>
                        </ToolBar>
                    </ToolBarTray>
                    <DataGrid AutoGenerateColumns="True" Margin="2,2,2,2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Номер"/>
                            <DataGridTextColumn Header="Дата создания"/>
                            <DataGridTextColumn Header="Клиент"/>
                            <DataGridTextColumn Header="Дата выполнения"/>
                            <DataGridTextColumn Header="Сумма"/>
                            <DataGridTextColumn Header="Ответственный"/>
                            <DataGridTextColumn Header="Адрес грузополучателя"/>
                            <DataGridTextColumn Header="Статус"/>
                            <DataGridTextColumn Header="Комментарий"/>
                        </DataGrid.Columns>

                    </DataGrid>
                </StackPanel>

            </TabItem>
            <TabItem Header="Заказы поставщику" IsSelected="True">
                <StackPanel>
                    <ToolBarTray Margin="2,2,2,2">
                        <ToolBar>
                            <Button Content="Добавить"/>
                            <Button Content="Удалить"/>
                            <Button Content="Провести"/>
                            <Button Content="Изменить"/>
                        </ToolBar>
                    </ToolBarTray>
                    <DataGrid AutoGenerateColumns="True" Margin="2,2,2,2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Номер"/>
                            <DataGridTextColumn Header="Дата создания"/>
                            <DataGridTextColumn Header="Поставщик"/>
                            <DataGridTextColumn Header="Дата выполнения"/>
                            <DataGridTextColumn Header="Сумма"/>
                            <DataGridTextColumn Header="Ответственный"/>
                            <DataGridTextColumn Header="Статус"/>
                            <DataGridTextColumn Header="Комментарий"/>
                        </DataGrid.Columns>

                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Клиенты">
                <StackPanel>
                    <ToolBarTray Margin="2,2,2,2">
                        <ToolBar>
                            <Button Content="Добавить"/>
                            <Button Content="Удалить"/>
                            <Button Content="Изменить"/>
                        </ToolBar>
                    </ToolBarTray>
                    <DataGrid AutoGenerateColumns="True" Margin="2,2,2,2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Клиент"/>
                            <DataGridTextColumn Header="E-mail"/>
                            <DataGridTextColumn Header="Телефон"/>
                            <DataGridTextColumn Header="Адрес"/>
                            <DataGridTextColumn Header="Комментарий"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Поставщики">
                <StackPanel>
                    <ToolBarTray Margin="2,2,2,2">
                        <ToolBar>
                            <Button Content="Добавить"/>
                            <Button Content="Удалить"/>
                            <Button Content="Изменить"/>
                        </ToolBar>
                    </ToolBarTray>
                    <DataGrid AutoGenerateColumns="True" Margin="2,2,2,2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Поставщик"/>
                            <DataGridTextColumn Header="E-mail"/>
                            <DataGridTextColumn Header="Телефон"/>
                            <DataGridTextColumn Header="Адрес"/>
                            <DataGridTextColumn Header="Комментарий"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Профиль" IsSelected="True">
                <StackPanel HorizontalAlignment="Center" Width="600" Margin="0,50,0,0" >
                    <Grid VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.3*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Фамилия:"/>
                        <TextBox Grid.Row="0" Grid.Column="2" x:Name="txtLastname"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:"/>        
                        <TextBox Grid.Row="1" Grid.Column="2" x:Name="txtName"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Отчество:"/>
                        <TextBox Grid.Row="2" Grid.Column="2" x:Name="txtPatronym" />
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Пароль:"/>
                        <PasswordBox Grid.Row="4" Grid.Column="2" x:Name="txtPassword"/>
                        <TextBlock Text="Табельный номер:"
                                   Grid.Row="3"
                                   Grid.Column="0" 
                                   TextWrapping="Wrap"/>
                        <TextBox x:Name="txtTabelbNumber" Grid.Row="3" Grid.Column="2"/>
                        <TextBlock Text="Должность:" Grid.Row="5" Grid.Column="0"/>
                        <TextBox x:Name="txtPost" Grid.Row="5" Grid.Column="2" IsEnabled="False" />         

                </Grid>
                <Button Content="Изменить" Click="Button_Click"/>
                <Button Content="Сохранить" Click="Button_Click_1"/>
                <Button Content="Выйти из профиля"/>
                </StackPanel>
                
            </TabItem>
        </TabControl>
    </Grid>
</Window>
