<Window x:Class="WpfApp2.WorkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="WorkWindow" Height="450" Width="800" WindowState="Maximized">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl Margin="5,5,5,5">
            <TabItem Header="Остатки" >
                
            </TabItem>
            <TabItem Header="Заказы клиентов">
                <StackPanel>
                    <ToolBarTray Margin="2,2,2,2">
                        <ToolBar>
                            <Button Content="Добавить"/>
                        </ToolBar>
                    </ToolBarTray>
                    <DataGrid AutoGenerateColumns="True" Margin="2,2,2,2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Номер"/>
                            <DataGridTextColumn Header="Дата создания"/>
                            <DataGridTextColumn Header="Клиент"/>
                            <DataGridTextColumn Header="Дата выполнения"/>
                            <DataGridTextColumn Header="Сумма"/>
                            <DataGridTextColumn Header="Ответственный"/>
                            <DataGridTextColumn Header="Адрес грузополучателя"/>
                            <DataGridTextColumn Header="Статус"/>
                        </DataGrid.Columns>

                    </DataGrid>
                </StackPanel>

            </TabItem>
            <TabItem Header="Заказы поставщику" IsSelected="False">

            </TabItem>
            <TabItem Header="Клиенты">

            </TabItem>
            <TabItem Header="Поставщики">

            </TabItem>
            <TabItem Header="Профиль">

            </TabItem>
        </TabControl>
    </Grid>
</Window>
