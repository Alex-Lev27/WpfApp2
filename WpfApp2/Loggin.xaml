<Window x:Class="WpfApp2.Loggin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Loggin" Height="400" Width="500">
    <Grid>
        <Label Content="Authorization" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="18"/>

        <Label Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,120,0,0"/>
        <TextBox x:Name="txtN" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120,0,0" Width="200"/>

        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,200,0,0"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,200,0,0" Width="200"/>

        <Button Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,250,0,0" Width="100" Click="OnClick" />

        <Button Content="Dont have account? Registration" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,297,0,0" Width="200" Click="OnClick" />

    </Grid>
</Window>
