<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <Label Content="Registration Form" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="18"/>

        <Label Content="Lastame:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,80,0,0"/>
        <TextBox x:Name="txtLastname" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="50,80,0,0" Width="200"/>

        <Label Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,120,0,0"/>
        <TextBox x:Name="txtN" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="50,120,0,0" Width="200"/>

        <Label Content="Patronymic:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin=" 50, 160, 0, 0"/>
        <TextBox x:Name="txtPatronym" HorizontalAlignment="Center" VerticalAlignment="Top"  Margin="50,160,0,0" Width="200"/>

        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,200,0,0"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="50,200,0,0" Width="200"/>

        <Button Content="Register" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,275,0,0" Width="100" Click="ButtonClick"/>

        <Button Content="Already have an account? Login" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,320,0,0" Width="200" Click="ButtonClick"/>
        <CheckBox Content="Male" HorizontalAlignment="Left" Margin="175,246,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="Female" HorizontalAlignment="Left" Margin="292,246,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
